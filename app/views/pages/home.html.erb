<h3>FirebaseUI Demo</h3>
<div id="loading">Loading...</div>
<div id="loaded" class="hidden">
  <div id="main">
    <div id="user-signed-in" class="hidden">
      <div id="user-info">
        <div id="photo-container">
          <img id="photo"></img>
        </div>
        <div id="name"></div>
        <div id="email"></div>
        <div class="clearfix"></div>
      </div>
      <p>
        <%= link_to "Dashboard (Secure page == Devise)", secure_pages_dashboard_path %>
      </p>
      <p>
        <button id="sign-out">Sign Out</button>
        <button id="delete-account">Delete account</button>
      </p>
    </div>
    <div id="user-signed-out" class="hidden">
      <h4>You are signed out.</h4>
      <p>
        <!-- Add display none style to test the authentication with Devise -->
        <!-- Redirect and Popup methods was not covered -->
        <button id="sign-in-with-redirect" style="display: none;">Sign In with Redirect</button>
        <button id="sign-in-with-popup" style="display: none;">Sign In with Popup</button>
      </p>
      <div id="firebaseui-spa">
        <h5>Single Page Application mode:</h5>
        <div id="firebaseui-container"></div>
      </div>
    </div>
  </div>
</div>
